{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "module": "NodeNext",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "paths": {
      "#root/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
