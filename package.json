{
  "name": "telegram-bot-template",
  "version": "0.1.0",
  "description": "Telegram bot starter template",
  "type": "module",
  "imports": {
    "#root/*": "./build/src/*"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc",
    "build": "tsc --noEmit false",
    "dev": "tsc-watch --onSuccess \"tsx ./scripts/start.ts\"",
    "start": "tsc && tsx ./scripts/start.ts",
    "start:force": "tsx ./scripts/start.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "npx husky install"
  },
  "author": "deptyped <deptyped@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@elastic/ecs-pino-format": "^1.5.0",
    "@grammyjs/auto-chat-action": "0.1.1",
    "@grammyjs/conversations": "1.1.2",
    "@grammyjs/files": "1.0.4",
    "@grammyjs/hydrate": "1.3.1",
    "@grammyjs/parse-mode": "1.7.1",
    "@grammyjs/runner": "2.0.3",
    "@grammyjs/storage-psql": "2.4.0",
    "@grammyjs/types": "3.2.1",
    "axios": "1.5.1",
    "axios-retry": "3.8.0",
    "callback-data": "1.1.1",
    "dayjs": "^1.11.12",
    "dotenv": "16.3.1",
    "fastify": "4.23.2",
    "grammy": "1.18.1",
    "grammy-guard": "0.5.0",
    "iso-639-1": "3.1.0",
    "node-graceful-shutdown": "1.1.5",
    "pg": "8.11.3",
    "pino": "8.15.1",
    "pino-pretty": "10.2.0",
    "telegram-inline-calendar": "^2.1.0",
    "tsx": "4.21.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/lodash": "4.14.202",
    "@types/node": "20.19.0",
    "@types/pg": "8.10.9",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "8.49.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-unicorn": "48.0.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "tsc-watch": "6.0.4",
    "typescript": "5.2.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  }
}
